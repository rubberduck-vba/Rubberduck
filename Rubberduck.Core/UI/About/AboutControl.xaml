                        </TextBlock>

                        <TextBlock Text="{Resx ResxName=Rubberduck.Resources.About.AboutUI, Key=AboutWindow_ContributorsHeader}"
                                   Style="{StaticResource NormalLabel}" FontWeight="Bold" />
                        <TextBlock Style="{StaticResource NormalLabel}"
